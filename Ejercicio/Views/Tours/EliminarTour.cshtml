@model ProyectoLogin.Models.Tour;
@{
    ViewData["Title"] = "Eliminar Tour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger"> ¿Esta seguro de eliminar el tour?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="EliminarTour" asp-controller="Tours" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Destino">Destino</label>
                <input class="form-control form-control-sm" asp-for="Destino" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="FechaInicio">Fecha Inicio</label>
                <input class="form-control form-control-sm" asp-for="FechaInicio" type="date" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="FechaFin">Fecha Fin</label>
                <input class="form-control form-control-sm" asp-for="FechaFin" type="date" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Precio">Precio</label>
                <input class="form-control form-control-sm" asp-for="Precio" type="number" />
            </div>

            <div class="mb-2">
                
                 <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="ListadoTours" asp-controller="Tours">Volver</a>

            </div>

        </form>

    </div>
</div>

